<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#8ae96d43">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        android:scaleX="1.75"/>

    <RelativeLayout
        android:id="@+id/linear_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Que voulez-vous faire ?"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:paddingTop="80dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="CREATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="MODIFICATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="CREATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="ENREGISTREMENT \n\ndes matchs"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c2e96d43">

        <TextView
            android:id="@+id/bt_back_creation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_left_arrow_white"/>

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_shutdown_white"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/bt_joueur_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOUEUR"
                android:background="@drawable/round_shape_orange_border_white"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="25dp"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARBITRE"
                android:background="@drawable/round_shape_orange_border_white"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COURT"
                android:background="@drawable/round_shape_orange_border_white"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>