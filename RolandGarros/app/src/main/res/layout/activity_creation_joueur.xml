<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        android:scaleX="1.75"/>

    <RelativeLayout
        android:id="@+id/linear_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:elevation="1dp">

        <TextView
            android:id="@+id/bt_back_creation_joueur"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_left_arrow_white"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_shutdown_white"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:elevation="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Création d'un joueur"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8ae96d43"
        android:orientation="vertical"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:paddingTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_orange_border_white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:paddingStart="12dp"
            android:drawablePadding="15dp"
            android:paddingEnd="12dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_orange_border_white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:paddingStart="12dp"
            android:drawablePadding="15dp"
            android:paddingEnd="12dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationalité"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_orange_border_white"
            android:textColor="#FFFFFF"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="15dp"
            android:paddingEnd="12dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexe"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            style="@style/mySpinnerItemStyle"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_shape_orange_border_white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_button_green_border"
            android:text="enregistrer"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light"/>


    </LinearLayout>

</RelativeLayout>