<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        android:scaleX="1.75"/>

    <RelativeLayout
        android:id="@+id/linear_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:elevation="1dp">

        <TextView
            android:id="@+id/bt_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_left_arrow_white"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_shutdown_white"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:elevation="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Que voulez-vous faire ?"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8ae96d43"
        android:orientation="vertical"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:paddingTop="80dp">

        <Button
            android:id="@+id/bt_menu_creation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="CREATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="MODIFICATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="CREATION \n\ndes joueurs, arbitres, courts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_shape_button_white"
            android:fontFamily="sans-serif-light"
            android:text="ENREGISTREMENT \n\ndes matchs"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>